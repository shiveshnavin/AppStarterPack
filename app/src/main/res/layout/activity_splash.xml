<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent" >

    <ImageView
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"

        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/icon"
        android:layout_above="@+id/logins"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:src="@drawable/avd_logo"
            android:layout_gravity="center"
            android:layout_height="130dp" />


        <ImageView
            android:id="@+id/app_n"
            android:layout_width="150dp"
            android:src="@drawable/avd_app_name"
            android:layout_gravity="center"
            android:layout_height="120dp" />




    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/logins"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="font_regular"
                android:visibility="invisible"
                android:padding="10dp"
                android:id="@+id/app"
                android:textColor="@color/color_splash_accent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="23sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:weightSum="0.6"
                android:orientation="vertical"
                android:id="@+id/login_via"
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <LinearLayout
                    android:layout_margin="7dp"
                    android:id="@+id/m_login"
                    android:background="@drawable/rounded_selector"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/m_small"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:padding="10dp"
                        android:src="@drawable/m_bb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        app:font="font_regular"
                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:textColor="@color/color_splash_accent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Connect via Phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="7dp"
                    android:id="@+id/fb_login"
                    android:background="@drawable/rounded_selector"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/fb_small"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:padding="10dp"
                        android:src="@drawable/fb_bb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        app:font="font_regular"
                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:textColor="@color/color_splash_accent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Connect via Facebook"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="7dp"
                    android:id="@+id/g_login"
                    android:background="@drawable/rounded_selector"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/g_small"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:padding="10dp"
                        android:src="@drawable/g_bb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        app:font="font_regular"
                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:textColor="@color/color_splash_accent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Connect via Google"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <com.daniribalbert.customfontlib.views.CustomFontTextView
            app:font="font_regular"
            android:padding="10dp"
            android:textColor="@color/color_splash_accent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Till You Sweat Pride !!"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />



        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
